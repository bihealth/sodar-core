# Remember to set DJANGO_READ_DOT_ENV_FILE=1 in your actual environment!
# This is an .env file example for SODAR Core development.

DJANGO_DEBUG=1
ENABLE_DEBUG_TOOLBAR=1

# PostgreSQL
DATABASE_URL="postgres://sodar_core:sodar_core@127.0.0.1/sodar_core"

# Django server settings
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_SECRET_KEY=CHANGE_ME!
DJANGO_ALLOWED_HOSTS=*
DJANGO_SECURE_SSL_REDIRECT=False

# Email
# EMAIL_SENDER=sender@your.domain
# EMAIL_URL=smtp://server.your.domain
EMAIL_SUBJECT_PREFIX=[SODAR Core Dev]

# LDAP settings
ENABLE_LDAP=0

# Projectroles settings
PROJECTROLES_ENABLE_PROFILING=True
PROJECTROLES_SITE_MODE=SOURCE
PROJECTROLES_SEND_EMAIL=1
PROJECTROLES_ALLOW_LOCAL_USERS=1
PROJECTROLES_DELEGATE_LIMIT=1
PROJECTROLES_ALLOW_ANONYMOUS=0
PROJECTROLES_DISABLE_CATEGORIES=0

# Add/modify settings for projectroles and other apps as needed for development
